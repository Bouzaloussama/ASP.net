@model WebApp.Models.User

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<h2>Register</h2>
<br />
<br />
<br />

<!--################################################-->
<div class="container-fluid mb-30">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">

            <!-- ################################################################################ -->


            <form class="form-horizontal" asp-action="Create">

                <div class="form-group">
                    <label class="form-label col-sm-3" for="name">Name</label>
                    <div class="col-sm-9">
                        <input class="form-input form-control" asp-for="Name" placeholder="Name" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label col-sm-3" for="Last_name">Last Name</label>
                    <div class="col-sm-9">
                        <input class="form-input form-control" asp-for="Last_Name" value="" placeholder="Last Name" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label col-sm-3" for="tell">Phone Number</label>
                    <div class="col-sm-9">
                        <input class="form-input form-control" asp-for="Phone" value="" placeholder="+3106........" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label col-sm-3" for="email">Email</label>
                    <div class="col-sm-9">
                        <input class="form-input form-control" asp-for="Email" value="" placeholder="xxxxxxxx@gmail.com" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label col-sm-3" for="password">Password</label>
                    <div class="col-sm-9">
                        <input class="form-input form-control" type="password" asp-for="Password" value="" placeholder="Password" required />
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="agree" value="1" />
                                <i class="form-icon"></i> I accept the <a href="https://epdf.pub/term" target="_blank">Terms of Service</a>
                            </label>
                        </div>
                    </div>
                </div>
                <script src='https://www.google.com/recaptcha/api.js'></script>
                <div class="form-group">
                    <label class="form-label col-sm-3" for="password">&nbsp;</label>
                    <div class="col-sm-9">
                        <div class="g-recaptcha" data-sitekey="6Lf6PKYUAAAAAF2VRRjFr1t6lWDaTl5rXGF2YQAi"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button class="btn btn-primary btn-block" type="submit">Register</button>
                    </div>
                </div>
            </form>

            <!-- ######################################################################################################## -->>


        </div>
        <div class="col-lg-4 col-md-12 col-sm-12">

        </div>
    </div>
</div>

