@model WebApp.Models.Panier

<br />

<h3>Are you sure you want to delete this?</h3>

<div class="container-fluid">
    <div class="row mb-30">
        <div class="col-md-12">
            <h2 class="main-title">Featured Documents</h2>
        </div>


        <div class="col-lg-2 col-md-3 col-xs-6">
            <div class="note">
                <div class="note-meta-thumb">
                    <a href="#">
                        <img src="~/Images/@Url.Content(@Model.Adress)" alt="Advanced Grammar in Use with Answers" />
                        <h3 class="note-title"> @Html.DisplayFor(model => model.Title)</h3>
                    </a>
                </div>
                <div class="note-action">
                    <a class="more-link" asp-action="PanierDetails" asp-route-id="@Model.Id">Read more</a>&emsp;&emsp;&emsp;&nbsp;<br>
                    <br />
                    The Author name :  @Html.DisplayFor(model => model.Author)<br />
                    The Genre : @Html.DisplayFor(model => model.Genre)<br />
                    The Price :  @Html.DisplayFor(model => model.Price) DH
                    <br />

                </div>
            </div>
        </div>
    </div>

    <form asp-action="PanierDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="PanierIndex">Back to List</a>
    </form>
    <nav class="text-center">

        <h3>thanks</h3>
    </nav>
</div>

